# Hexar Environment Variables
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (Required for AI processing)
# Get this from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Supabase Configuration (Required for database and auth)
# Get these from your Supabase project dashboard
SUPABASE_URL=your_supabase_project_url
SUPABASE_KEY=your_supabase_service_role_key

# Frontend Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Redis Configuration (for local development)
REDIS_URL=redis://localhost:6379

# === Server/Deployment Configuration ===
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# Agent Communication URLs (Environment-aware)
NEXT_PUBLIC_AGENT_WEBSOCKET_URL=ws://localhost:8000/agents/ws
NEXT_PUBLIC_API_URL=http://localhost:8000

# === Message Broker Configuration ===
# Primary message broker (rabbitmq for enterprise scale, redis for MVP)
MESSAGE_BROKER_TYPE=rabbitmq

# RabbitMQ Configuration (Enterprise Scale - per CLAUDE.md)
RABBITMQ_URL=amqp://hexar_user:hexar_password@localhost:5672/hexar_vhost

# Redis Configuration (Caching and MVP fallback)
REDIS_URL=redis://localhost:6379

# Alternative host/port format (if full URLs don't work)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=hexar_user
RABBITMQ_PASSWORD=hexar_password
RABBITMQ_VHOST=hexar_vhost
REDIS_HOST=localhost
REDIS_PORT=6379

# === Testing/Development URLs (Optional) ===
BACKEND_URL=http://localhost:8000
FRONTEND_HOST=localhost
FRONTEND_PORT=3000

# Development settings
DEBUG=True
LOG_LEVEL=INFO
NODE_ENV=development

# Database (local development only - production uses Supabase)
DATABASE_URL=postgresql://hexar_user:hexar_password@localhost:5432/hexar_dev